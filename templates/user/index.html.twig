{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
	
	<style>
		body{
			background-image: url({{asset('assets/img/bg/pattern.svg')}});
			background-position:center;
		}

		.login-box{
			margin-top:150px;
			background: #fff;
			box-shadow: 0px 0px 12px #8e8e8e;
			border-radius: 6px;
			text-align: center;
		}
	</style>

	<div  class="container pt-2">
		  <div style="" class="row">
		  	<div class="col s0 m3"></div>
			<div class="col s12 m6 login-box">
				<h4>Any user found.</h4>
				<p>Please create a new user to start <strong class="teal-text">blogging</strong>.</p>
				<form action="{{path('create-user')}}" method="POST" class="p-2">
					<div class="row">
				        <div class="input-field col s12">
				    		<input id="nick" name="nick" type="text" class="">
				    		<label for="nick">Nickname:</label>
				    	</div>

				        <div class="input-field col s12">
				    		<input id="email" name="email" type="email" class="">
				    		<label for="email">Email:</label>
				    	</div>

				        <div class="input-field col s12">
				    		<input id="password" name="password" type="password" class="">
				    		<label for="password">Password:</label>
				    	</div>

				    	<input type="submit" value="Sign in" class="col s12 btn">
				    </div>
				</form>
			</div>
		  	<div class="col s0 m3"></div>

		  </div>
	</div>

{% endblock %}
